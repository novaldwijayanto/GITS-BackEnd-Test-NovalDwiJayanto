using System;
using System.Collections.Generic;

class WeightedStrings
{
    static void Main(string[] args)
    {
        string inputString = "abbcccd";
        int[] queries = { 1, 3, 9, 8 };
        
        List<string> results = SolveWeightedStringsProblem(inputString, queries);
        
        foreach (string result in results)
        {
            Console.WriteLine(result);
        }
    }

    static List<string> SolveWeightedStringsProblem(string s, int[] queries)
    {
        HashSet<int> weights = new HashSet<int>();

        for (int i = 0; i < s.Length; i++)
        {
            char currentChar = s[i];
            int currentWeight = CharWeight(currentChar);
            
            weights.Add(currentWeight);

            int j = i + 1;
            while (j < s.Length && s[j] == currentChar)
            {
                currentWeight += CharWeight(currentChar);
                weights.Add(currentWeight);
                j++;
            }
        }

        List<string> results = new List<string>();
        foreach (int query in queries)
        {
            if (weights.Contains(query))
            {
                results.Add("Yes");
            }
            else
            {
                results.Add("No");
            }
        }

        return results;
    }

    static int CharWeight(char c)
    {
        return c - 'a' + 1;
    }
}
